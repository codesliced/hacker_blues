<!DOCTYPE html>
<html>
<head>
  <title>HackerBlues</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	 <div class='header'>
	  <div class='nav'>
	  	<%= link_to "Hacker Blues", :root %>
        <% unless session[:user] %>
          <%= link_to "Logout", logout_path %>
        <% else %>
          <%= link_to "Login", login_path %>
          <%= link_to "Sign up", signup_path %>
          <% end %>
    </div>
	</div>

<%= yield %>

</body>
</html>
