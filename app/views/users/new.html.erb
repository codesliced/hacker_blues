<div class="signup_container">
  <h1>Welcome</h1>

  <%= form_for @user, :html => { :class => "create_user" } do |f| %>
    <h1>Create User:</h1>
    <div>Username: <%= f.text_field :username %></div>
    <div>Email: <%= f.text_field :email %></div>
    <div>Password: <%= f.password_field :password %></div>
    <%= f.submit 'Create me!' %>
  <% end %>
</div>
